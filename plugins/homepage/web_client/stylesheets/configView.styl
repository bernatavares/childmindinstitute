.g-homepage-container
  margin-bottom 10px


.g-homepage-logo-container
  min-height 200px
  border 1px solid #ccc
  border-radius 5px

  #g-upload-form
    border-right 1px solid  #ccc
    padding-right 20px

  .g-homepage-logo-upload-container
    display inline-block
    font-size 0.9em
    width 350px
    padding 0 10px 10px

  .g-homepage-logo-preview-container
    display inline-block
    position relative
    vertical-align top
    height 200px

    .g-homepage-logo-preview
      margin 30px

    #g-homepage-logo-reset
      display block
      position absolute
      bottom 20px
      width 90px
      margin-left 30px
      vertical-align bottom

.g-config-breadcrumb-container
form#g-celery-jobs-config-form(role="form")
  .form-group
    label.control-label(for="celery_jobs_broker") Broker URL
    input#celery_jobs_broker.input-sm.form-control(
      type="text", placeholder="Celery broker URL")
  .form-group
    label.control-label(for="celery_jobs_app_main") Celery app main name
    input#celery_jobs_app_main.input-sm.form-control(
      type="text", placeholder="Celery app main name")
  .form-group
    label.control-label Celery user ID
    input#celery_jobs_user_id.input-sm.form-control(type="text")
    .g-celery-user-select-container

  p#g-celery-jobs-error-message.g-validation-failed-message
  input.btn.btn-sm.btn-primary(type="submit", value="Save")

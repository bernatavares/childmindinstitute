description "Girder server"

start on startup
stop on shutdown

# Automatically Respawn:
respawn
respawn limit 20 5

setuid "{{ ansible_user_id }}"
setgid "{{ ansible_user_id }}"

script
    cd "{{ girder_path }}"
    {% if girder_virtualenv is defined %}
    . "{{ girder_virtualenv }}/bin/activate" && python -m girder > /dev/null 2>&1
    {% else %}
    exec python -m girder > /dev/null 2>&1
    {% endif %}
end script

option_settings:
  aws:elasticbeanstalk:container:python:staticfiles:
    "/static/": "/opt/python/run/venv/share/girder/web_client/static/"

packages:
  yum:
    gcc: []
    git: []
    openldap-devel: []

commands:
  01_make_log_root:
    command: 'sudo mkdir -p /var/log/girder'

  02_chown_log_root:
    command: 'sudo chown wsgi:wsgi /var/log/girder'

  03_chmod_share:
    command: 'sudo chmod -R 755 /opt/python/run/venv/share/girder/'
